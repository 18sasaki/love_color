<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :view_name %><br />
    <%= f.text_field :view_name %>
  </div>

  <%= hidden_field 'member', 'group_id', :value => @member.group_id || params[:group_id] %>

  <div class="field">
    <%= f.label :color_id %><br />
    <%= f.select 'color_id', options_for_select([[]] + @colors.map{|color| [color.view_name, color.id]}, @member.color_id) %>
  </div>
  <div class="field">
    <%= f.label :push_flg %><br />
    <%= f.check_box('push_flg', {:cheked => @member.push_flg == 1}, 1, 0) %>
  </div>
  <div class="field">
    <%= f.label :center_flg %><br />
    <%= f.check_box('center_flg', {:cheked => @member.center_flg == 1}, 1, 0) %>
  </div>
  <div class="field">
    <%= f.label :graduation_flg %><br />
    <%= f.check_box('graduation_flg', {:cheked => @member.graduation_flg == 1}, 1, 0) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
